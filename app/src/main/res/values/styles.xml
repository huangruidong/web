<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 圆角按钮的样式 -->
    <style name="FilletRedBtnStyle">
        <item name="android:background">@drawable/solid_fillet_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 大圆角按钮的样式 -->
    <style name="CircleRedBtnStyle">
        <item name="android:background">@drawable/authentication_solid_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 左右文字 -->
    <style name="CoupleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
    </style>

    <!-- 左右文字 - 带下划线 -->
    <style name="CoupleLayout.Line" parent="CoupleLayout">
        <item name="android:background">@drawable/underline</item>
    </style>

</resources>
